    private void showActionPerformed(java.awt.event.ActionEvent evt) {                                     
        try{
            String str=firstname.getText();
            Class.forName("com.mysql.jdbc.Driver");
            Connection con=DriverManager.getConnection("jdbc:mysql://localhost:3306/mydb","root","root");
            PreparedStatement ps=con.prepareStatement("select * from account where fname=?");
            ps.setString(1, str);
            //Executing Query
            ResultSet rs=ps.executeQuery();
            if(rs.next()){
                String s=rs.getString(6); //mob
                String s1=rs.getString(2); //lname
                String s2=rs.getString(3); //uname
                String s3=rs.getString(4); //pin
                String s4=rs.getString(5); //email
                //sets Records in Textfields
                username.setText(s2);
                lname.setText(s1);
                email.setText(s4);
                mobno.setText(s);
                password.setText(s3);
            
            }
            else{
                JOptionPane.showMessageDialog(null,"Not a registered User!"); 
            }
        }
        catch(Exception ex){System.out.println(ex);}
    
    }                                    

